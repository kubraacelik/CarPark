@model LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Responsive admin dashboard and web application UI kit.">
    <meta name="keywords" content="login, signin">

    <title>Car Park Giriş Yap</title>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500" rel="stylesheet">

    <!-- Styles -->
    <link href="../assets/css/core.min.css" rel="stylesheet">
    <link href="../assets/css/app.min.css" rel="stylesheet">
    <link href="../assets/css/style.min.css" rel="stylesheet">

    <!-- Favicons -->
    <link rel="apple-touch-icon" href="../assets/img/apple-touch-icon.png">
    <link rel="icon" href="../assets/img/favicon.png">

    <style>
        body, html {
            height: 100%;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #f4f7fa;
            background-image: url('/img/carpark2.png');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }

        .card {
            width: 450px;
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.1);
            background-color: darkgray;
        }

        .form-control {
            border-radius: 5px;
            padding: 3px
        }

        .center-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .custom-blue {
            color: #2e86c1;
        }

    </style>
</head>
<body>
    <div class="row min-h-fullscreen center-vh p-20 m-0">
        <div class="col-12">
            <div class="card card-shadowed px-50 py-30 w-400 mx-auto" style="max-width: 100%">
                <h5 class="text-uppercase">Giriş Yap</h5>
                <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-type-material" role="form">
                    <div class="form-group">
                        <input asp-for="UserName" type="text" class="form-control" id="username">
                        <label asp-for="UserName">Kullanıcı Adınız</label>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input asp-for="Password" type="password" class="form-control" id="password">
                        <label asp-for="Password">Şifre</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <button class="form-control btn btn-bold btn-block btn-primary" type="submit">Giriş Yap</button>
                </form>

                <p class="text-center text-muted fs-13 mt-20">
                    Hesabınız yok mu?
                    <a class="custom-blue text-primary fw-500" href="#">Kayıt Ol</a>
                </p>
            </div>
        </div>

        <footer class="col-12 align-self-end text-center fs-13">
            <p class="mb-0">
                <small>Copyright 2019 <a href="http://thetheme.io/theadmin">Kübra Çelik</a></small>
            </p>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="../assets/js/core.min.js"></script>
    <script src="../assets/js/app.min.js"></script>
    <script src="../assets/js/script.min.js"></script>
</body>
</html>
